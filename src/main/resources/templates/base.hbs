        <nav class="navbar navbar-expand-lg navbar-light bg-dark">
          <h3 class="navbar-brand text-light" style="font-family: 'Faster One', cursive">{{ username }}</h3>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link active text-light" href="/animals">ANIMALS</a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-light" href="/sightings">SIGHTINGS</a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-light disabled" href="/rangers">OUR RANGERS</a>
              </li>
            </ul>
          </div>
        </nav>
      {{/block}}
    </div>

    <div class="content">
      {{#block "content" }}
      {{/block}}
    </div>

{{/block}}

</div>

{{#block "footer" }}
  </body>
